# User Management App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-USE-OPENSSL-RAND-BASE64-32

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=./users.db

# Patreon API Configuration (Optional - can be set via UI)
# Get your Creator Access Token from: https://www.patreon.com/portal/registration/register-clients
PATREON_ACCESS_TOKEN=your-patreon-creator-access-token-here

# CORS Configuration (for production)
CORS_ORIGIN=http://localhost:3000

# Security Settings
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=info
